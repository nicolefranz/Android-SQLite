<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Create_Account_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="Complete the details below" />
    <EditText
        android:id="@+id/Fname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:ems="10"
        android:maxLength="50"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:hint="First Name" />
    <EditText
        android:id="@+id/Mname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:ems="10"
        android:maxLength="50"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:hint="Middle Name"
        />
    <EditText
        android:id="@+id/Lname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:ems="10"
        android:maxLength="50"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:hint="Last Name"
        />
    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="SAVE INFORMATION"
        android:onClick="AddRecord"/>
    <Button
        android:id="@+id/btnViewRecords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="VIEW RECORDS"
        android:onClick="ViewRecords"/>
    <Button
        android:id="@+id/btnClearRecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="CLEAR RECORDS"
        android:onClick="ClearRecords"/>
    </LinearLayout>
</ScrollView>